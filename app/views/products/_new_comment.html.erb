<% if signed_in? %>
<h4>Add a review:</h4>
<%= form_for([@product, @product.comments.build]) do |f| %>
<p>
  <%= f.label :body, "Comments" %><br>
  <%= f.text_area :body, class: 'form-control' %>
</p>

<p>
  <div class="rating"></div>
</p>

<p>
  <%= f.submit "Submit", class: 'btn btn-default' %>
</p>
<% end %>
<% else %>
<p style='text-decoration:underline; color:red;'>You're not signed in. <%= link_to 'Sign in', new_user_session_path %> to leave a review<p>
<% end %>
