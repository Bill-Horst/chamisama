<div id='product-show'>
  <p id="notice"><%= notice %></p>

  <h1 class='product-name'>
    <%= @product.name %>
  </h1>

  <p class='product-description'>
    <%= @product.description %>
  </p>

  <p>
    <%= image_tag(@product.image_url) %>
  </p>

  <p>
    Type: <%= @product.colour %>
  </p>

  <p>
    Price: $<%= @product.price %>
  </p>

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>
