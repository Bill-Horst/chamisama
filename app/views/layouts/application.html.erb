<!DOCTYPE html>
<html>
<head>
  <title>Chamisama</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <%= csrf_meta_tags %>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
</head>

<body data-spy='scroll' data-target='.navbar'>

  <!-- NAVIGATION BAR -->
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <!-- BRAND -->
        <%= link_to "Chamisama", simple_pages_index_path, class: "navbar-brand" %>

      </div>

      <!-- RIGHT SIDE OF NAVIGATION BAR -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">

          <li><%= link_to "About us", simple_pages_about_path %></li>

          <li><%= link_to "Contact Us", simple_pages_contact_path %></li>

          <li>
            <%= form_with(url: products_path, method: 'get', local: true, class: "navbar-form") do |form| %>
            <%= form.text_field :q, id: 'q', value: params[:q], class: "form-control", placeholder: "enter desired tea here" %>
            <%= form.submit 'Search', class: "btn btn-default" %>
            <% end %>
          </li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tea Types <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Green Teas", products_path({ :tea_color => "green"}) %></li>
              <li><%= link_to "Black Teas", products_path({ :tea_color => "black"}) %></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">All Japanese Teas</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">All Chinese Teas</a></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to "All Products", products_path %></li>
            </ul>
          </li>

          <button id='sign-in-button' type="button" class="btn btn-default navbar-btn">Sign in</button>

        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <!-- END NAVIGATION BAR -->

  <%= yield %>

  <!-- FOOTER -->
  <footer class="footer">
    <div class="container">
      <p class="text-muted">&copy; 2017 Chamisama Tea</p>
    </div>
  </footer>
  <!-- END FOOTER -->

</body>
</html>
