<div id='contact-page'>
  <div class='contact-background'>
    <div class='contact-form'>
      <h1>Contact Us</h1>

      <%= flash[:notice] %>

      <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
      <div>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
        </div>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
        </div>
        <div class="form-group">
          <%= form.label :message %>
          <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
        </div>
      </div>
      <%= form.submit "Send", class: "form_label btn btn-primary" %>
      <% end %>
    </div>

    <hr />

    <div class='company-address'>
      <h1>Chamisama Tea</h1>
      <h4>栃木県宇都宮市西原町６００−３３野澤コーポ３０６号室</h4>
      <h4>Tochigi Utsunomiya Nishiharamachi 600-33 Nozawakoopo #306</h4>
    </div>

    <hr />

    <div class='company-map'>
      <div id="map"></div>
      <script>
      let map;
      let marker;
      let chamisama = {lat: 36.534034, lng: 139.878948};
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: chamisama,
          zoom: 16
        });
        marker = new google.maps.Marker({
          position: chamisama,
          animation: google.maps.Animation.DROP,
          map: map,
          title: 'Chamisama Tea'
        });
        marker.addListener('click', toggleBounce);
      }
      function toggleBounce() {
        if (marker.getAnimation() !== null) {
          marker.setAnimation(null);
        } else {
          marker.setAnimation(google.maps.Animation.BOUNCE);
        }
      }
      </script>
      <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCDmkgmvvajQ4UTnxr7P4bJF0wku6uaHNY&callback=initMap" async defer></script>
    </div>
  </div>
</div>
